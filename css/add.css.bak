/* .ADD */
main {
	margin: 2rem auto;
	max-width: 600px;
}

h2 { text-align: center; }

button {
	padding: .3rem;
	margin: 0.5rem 0;
}

.items {
	display: flex;
	justify-content: space-around;
}

.add input, .add label, .add textareal, .add select {
	display: block;
	font-size: 120%;
}
category{
	color: #000;
    font-size: 120%; 
	padding: 10px;
}

input {
    color: #000;
    font-size: 120%;
    padding: 10px;
	margin: 10px;
}

.add label {
	font-size: 150%;
	margin-top: 1rem;
}

.box {
	display: flex;
	flex-direction: column;
}

.toggle {
	border: thin solid #ff4c4c;
	padding: 1rem;
	margin-bottom: 1rem;
}

.hidden { display: none; }

